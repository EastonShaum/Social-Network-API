<div class="collapse mb-3" id="note-collapsable-div">
    <div class="card card-body p-2">
        <form id="new-note-form">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a note here" id="note-text-input" row="4"></textarea>
                <label for="note-text-input">Note</label>
            </div>
            <div class="d-flex justify-content-end mt-2">
                <button type="submit" class="btn btn-secondary py-0 me-2">Save</button>
                <a href="/dashboard" type="button" class="link-unstyled mx-2 p-0 my-auto" data-bs-toggle="collapse"
                    data-bs-target="#note-collapsable-div">Cancel</a>
            </div>
        </form>
    </div>
</div>